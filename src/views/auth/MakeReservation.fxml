<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="service.MakeReservationViewService">
    <children>
        <Label fx:id="hotelNameLabel" text="Hotel Name"/>
        <Label fx:id="roomTypeLabel" text="Room Type"/>
        <Label fx:id="roomPriceLabel" text="Room Price"/>
        <TextField fx:id="roomIdField" promptText="Room ID"/>
        <TextField fx:id="guestIdField" promptText="Guest ID"/>
        <DatePicker fx:id="checkInDatePicker" promptText="Check-in Date"/>
        <DatePicker fx:id="checkOutDatePicker" promptText="Check-out Date"/>
        <Button text="Make Reservation" onAction="#bookRoom"/>
    </children>
</VBox>
