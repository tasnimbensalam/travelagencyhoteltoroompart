<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="service.ReservationsDetailsService">
    <children>
        <Pane>
            <children>
                <Label text="Room ID:" layoutX="14.0" layoutY="14.0" />
                <TextField fx:id="roomIdField" layoutX="70.0" layoutY="10.0" prefWidth="150.0" />
                <Button text="Load Reservations" layoutX="230.0" layoutY="10.0" onAction="#loadReservations" />

                <Label text="Reservations:" layoutX="14.0" layoutY="50.0" />
                <ListView fx:id="reservationsListView" layoutX="14.0" layoutY="70.0" prefHeight="250.0" prefWidth="400.0" />
            </children>
        </Pane>
    </children>
</VBox>
